a-entity position="-1.5 1.1 0"
  a-entity.clickable click-action="save" icon-button="#asset-floppy" tooltip="Save Composition"
  a-entity.clickable click-action="export" icon-button="#asset-camera" tooltip="Export as PNG"
  a-entity.clickable click-action="help" icon-button="#asset-help-circle-outline" tooltip="Help"
a-entity position="-1.5 0.6 0"
  - let sizes = [[1024,512], [1024,1024]]
  - for (let i in sizes)
    a-entity position="0 ${-0.5 * i}"
      a-entity size="width: ${sizes[i][0]}; height: ${sizes[i][1]}" click-action="newComposition" icon-button="#asset-file-outline" tooltip="New Composition"
      a-entity text="value: ${sizes[i][0]}x${sizes[i][1]}; align: left; width: 4" position="2.4 0 0"
a-entity position="0 -0.6 0"
  a-entity.width edit-field="tooltip: Edit Width" text="value: 512; width: 0.56; wrapCount: 5.23" position="-1.74 0 0"
  a-entity text="value: x; width: 4; align: right" position="-2.717 0 0"
  a-entity.height edit-field="tooltip: Edit Height" text="value: 512; width: 0.56; wrapCount: 5.23" position="-0.556 0 0"
  a-entity click-action="newComposition" icon-button="#asset-file-outline" position="0.5 0 0" tooltip="New Composition"
