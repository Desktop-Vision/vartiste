a-entity.layer-shelf shelf=""
  a-entity position="-1.5 1.2 0"
    a-entity.clickable click-action="hide" icon-button="#asset-eye"
    a-entity.clickable click-action="edit" icon-button="#asset-brush"
    a-entity.clickable click-action="new" icon-button="#asset-plus-box-multiple"
    a-entity.clickable click-action="delete" icon-button="#asset-delete"
    a-entity.clickable click-action="toggleMode" icon-button="#asset-blur-linear"
    a-entity.clickable click-action="moveUp" icon-button="#asset-arrow-up-bold"
    a-entity.clickable click-action="moveDown" icon-button="#asset-arrow-down-bold"
  a-entity material="shader: flat; transparent: true; npot: true" geometry="primitive: plane; width: 3; height: 2" canvas-updater=""
  a-entity.active-indicator visible="false"
    - for e of [{pos: -2.1, rot: -90}, {pos: 2.1, rot: 90}]
      a-entity geometry="primitive: cone; height: 0.4; radiusBottom: 0.1; radiusTop: 0" rotation="0 0 ${e.rot}" position="${e.pos} 0 0" scale="1 1 0.3" material="shader: standard; metalness: 0.4; color: #a88d32; emissive: #a88d32; emissiveIntensity: 0.8"
  a-entity.mode-text text="value: Mode: source-over; color: #f83; width: 4" position="0.2 -1.3 0"
